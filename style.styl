body, html
  padding 0
  margin 0
  font-family 'Roboto', sans-serif
  font-size 16px
  font-weight 400
  height 100%

header
  h1
    font-size 14vw
    font-height 500
    padding 0
    margin 0
  h2
    font-size 4vw
    font-height 500
    padding 0
    margin 0
  width 100%
  height 24vw
  color #f5f5f5
  text-align center
  background-color #8CA2BF

main
  background-color white
  color #222
  h2
    text-align center
    margin 0
    padding 0.3em
    color #222
    font-weight 500
    font-size 2em
    background-color #D5DDE8

footer
  text-align center
  padding 1em
  background-color #8CA2BF
  color #f5f5f5
  a
    color #f5f5f5
    text-decoration none

article
  width 40em
  margin 1em auto

.list
  margin 0
  padding 0
  li
    list-style none
    padding 1em 0
    .content-p
      display table
    .content
      display table-cell
      vertical-align middle
      height 128px
      padding 1em
    span.name
      font-weight 500
      display block
    img.avatar
      padding 1em
      border-radius 100%
      float left
      display inline
      width 128px
      height 128px
  li:nth-child(2n)
    text-align right
    .content-p
      width calc(100% - (3em + 130px))
    img.avatar
      float right


a
  text-decoration none

.gh
  font-size 4em

.clearfix:before, .clearfix:after
  content:""
  display:table

.clearfix:after
  clear both

@media all and (min-width 50em)
  article
    width 48em

@media all and (max-width 40em)
  article
    width 100%
